---
import BaseLayout from '../../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const tags = [
    "godot",
    "steam",
    "uprooted",
    "elixir",
    "odin",
    "webdev",
    "css",
    "software",
    "linux",
    "programming",
    "advent-of-code",
    "art",
    "personal",
    "learning-in-public"
  ];

  const allPosts: any = await Astro.glob("../../../data/blog-posts/*.md");

  return tags.map(tag => {
    return {
      params: { tag: tag },
      props: { posts: allPosts }
    }
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const filteredPosts = posts.filter((post: any) => post.frontmatter.tags?.includes(tag));
const permalink = `${Astro.site?.href ?? '/'}blog/tag/${tag}`;
---

<BaseLayout title={tag} description="Filtered posts by tag" permalink={permalink} current="blog">
  <p><a href="/blog">⬅️ Back to all posts</a></p>
  <p>Posts tagged with {tag}</p>
  <ul>
    {filteredPosts.map((post: any) => {
      const href = `/blog/${post.file.split('/').pop().split('.').shift()}`;
      return <>
        <li><a href={href}>{post.frontmatter.title}</a></li>
        <p class="text-sm">{post.frontmatter.description}</p>
      </>
      })}
  </ul>
</BaseLayout>
